                    "HAAVMAdminPassword": {
                        "value": "[parameters('HAAVMAdminPassword')]"
                    },
                    "imageReference": {
                        "value": "[variables('imageReference')]"
                    },
                    "installScriptUri": {
                        "value": "[variables('installScriptUri')]"
                    },
                    "installScriptFileName": {
                        "value": "[variables('installScriptFileName')]"
