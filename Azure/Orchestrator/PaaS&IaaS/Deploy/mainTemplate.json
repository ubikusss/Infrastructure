                    "HAAadminEmail": {
                        "value": "[parameters('HAAadminEmail')]"
                    },
                    "HAAAdminPassword": {
                        "value": "[parameters('HAAAdminPassword')]"
                    },
                    "HAALicense": {
                        "value": "[parameters('HAALicense')]"
                    }
